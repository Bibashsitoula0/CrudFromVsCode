@model dotnet.Models.Teacher
    @{
    ViewData["Title"]="Edit";
  }

  
<div class="card mt-5 col-8  mx-auto">
    <div class="card-header">
        <div class="card-title mb-0">Edit Info of books</div>
    </div>
    <div class="card-body">
        <form asp-controller="Teacher" asp-action="Edit" method="post">
            <div class="form-group">
                <label asp-for="Id"></label>
                <input type="text" asp-for="Id" class="form-control form-control-sm">
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" asp-for="Name" class="form-control form-control-sm">
            </div>
           
           
            <div class="btn-group">
                <button class="btn btn-sm btn-success" type="submit">&nbsp;Save</button>
            </div>
        </form>
    </div>
</div>